{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["es6", "dom", "esnext"],
    "noImplicitAny": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "jsx": "react",
    "removeComments": true,
    "typeRoots": ["node_modules/@types"]
  },

  "include": ["**/*.ts", "**/*.tsx", "**/*.jsx"],
  "exclude": ["node_modules", "dist"]
}
